#!/usr/bin/env ruby
# Trap interrupts to quit cleanly. See
Signal.trap("INT") { exit 1 }

require 'appstorelookup'

# Output message to $stderr, prefixed with the program name
def pute(message="")
  $stderr.puts "#{$0}: #{message}"
end

begin
  Appstorelookup::CLI.start(ARGV)
rescue Interrupt
  pute "Quitting..."
  exit 1
end
